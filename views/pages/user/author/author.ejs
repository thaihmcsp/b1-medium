<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/views/components/header/headerStyle.css">
    <link rel="stylesheet" href="/views/pages/user/viewPost/viewPostStyle.css">
    <link rel="stylesheet" href="/views/components/menu/menuStyle.css">
    <link rel="stylesheet" href="/views/pages/user/author/author.css">
    <link rel="stylesheet" href="/views/components/rightNav/rightNavHomeStyle.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/views/pages/user/yourPost/yourpost.css">
    <title>Your post</title>
</head>

<body>
    <div class="allContainer">
        <!-- header -->
        <%- include('../../../components/header/header') %>
        <!-- header -->

        <!-- menu -->
        <%- include('../../../components/menu/menuUser') %>
        <!-- menu -->

        <!-- authorpost -->
        <div class="container_yourpost">
            <div class="yourpost_title">
                <h1><%= author.username %> Stories</h1>
            </div>
            <div class="yourpost_menu">
                <div class="menu-drafts">
                    <p>Home</p>
                </div>
            </div>
            <% listPost.map((post, index)=> {%>
                <a href="/api/post/get-post-by-id/<%= post._id %>" class="content-title">
                    <h3>
                        <%= post.title %>
                    </h3>
                    <div class="post-content">
                        <%- post.content %>
                    </div>
                    <p>
                        <%= post.createdAt.toLocaleString()%><i class="fa-solid fa-angle-down"></i>
                    </p>
                </a>
                <%})%>
        </div>
        <!-- authorpost -->
            
        <!-- rightNav -->
        <%- include('./rightNavAuthor') %>
        <!-- rightNav -->
    </div>
        
</body>

</html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
