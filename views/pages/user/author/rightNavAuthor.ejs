<div class="container_author">
    <div class="author-info">
        <div class="author-avatar">
            <img src="/<%= author.avatar %>"
                alt="">

        </div>
        <div class="author-username">
            <h3>
                <%= author.username %>
            </h3>
        </div>
        <div class="author-fllow">
            <p>
                <%= listUser.length %> Followers
            </p>
        </div>
        <div class="author-wanting">
            <p><%= author.description %></p>
        </div>
        <div class="author-contact">
            <p>Follow</p>
            <p><i class="fa-solid fa-envelope"></i></p>
        </div>
        <div class="author_menu">
            <div class="author_menu-title">
                <h3>Following</h3>
            </div>

            <% listFollow.map((author, index)=> {%>
                <div class="author_menu-list">
                    <div class="menu-list-avatar">
                        <img src="/<%= author.authorId.avatar %>"alt="">
                    </div>
                    <div class="menu-list-username">
                        <p>
                            <%= author.authorId.username %>
                        </p>
                    </div>
                    <div class="menu-list-dot">
                        <p><i class="fa-solid fa-ellipsis"></i></p>
                    </div>
                </div>
        
        <%})%>
        </div>
            <div class="see-all">
                <p>See All (<%= listFollow.length %>)</p>
            </div>
            <div class="menu-list">
                <p>list</p>
            </div>
    </div>
</div>